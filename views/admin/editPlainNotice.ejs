<%- include("../partials/headeradmin.ejs");  %>

<h3>Add Notice in Plain Text Area</h3>
<div class="EditSection">
  <div class="row text-center text-lg-left">
    <div class="col-lg-6 col-md-6 col-sm-12">
      <form action="/admin/editplainnotice/uploads/text" method="post">
        <br>
        <input type="text" name="Heading" value="" placeholder="Enter Heading">
        <textarea name="Content" rows="10" cols="50" placeholder="Enter Notice details..."></textarea>
        <button class="btn btn-success" type="submit" disabled>Upload</button>
      </form>
    </div>
  </div>
</div>

<br>

<div class="">
  <table class="table table-striped table-hover">
    <tr>
      <th>Heading</th>
      <th>Published</th>
      <th>Content</th>
      <th>Actions</th>
    </tr>
    <% TextArray.forEach(function(text){ %>
    <tr>
      <td> <%= text.heading %> </td>
      <td> <%= text.date %> </td>
      <td> <%= text.content %> </td>
      <td>
        <form class="" action="/admin/editplainnotice/delete/text" method="post">
          <button class="btn btn-danger" type="submit" name="delete" value= <%= text._id %> >Delete</button>
        </form>
      </td>
    </tr>
      <% }) %>
    </table>
</div>

<script type="text/javascript">
    $('input:text').on("change", function() {
      $('button:submit').prop('disabled', !$(this).val());
    });
</script>

